<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <%= render 'layouts/navbar' %>
  <div class="sidenav">
    <%= render 'layouts/sidebar' %>
  </div>
  <div class="container" style="margin-top: 80px;">
    <div class="row">
      <div class="col-sm-6 offset-3">
       <div class="card">

        <h5 class="card-header info-color white-text text-center text-info">
          <strong><%= t('channels.new.Add New Channel') %></strong>
        </h5>
        

        <div class="card-body text-danger">
          <%= form_for(@channel) do |f| %> 
            <%= f.label :name,class: 'text-info text-uppercase' %>
            <%= form_group_for f, :name, label: false  do %>
            <div class="Input-group"> 
            <%= f.text_field :name, class: 'form-control' ,name:"name",placeholder: t('channels.new.Enter Channel Name') %>
            </div> <% end %>
          <div>
           <%= f.hidden_field :workspace_id, value: @workspace.id ,name:"workspace_id" %>
         </div>
         <div class="form-group text-info text-uppercase">
          <%= f.check_box :privacy, name:'privacy' %>
          <%= f.label :Public %>
        </div>
        <div class="col-xs-3">
         <center> <div class="form-group">
           <%= f.submit t('channels.new.Save'), class: "btn btn-info" %>
           <%= link_to t('channels.new.Cancel'), workspace_path(@workspace), class: "btn btn-info" %>
         </div></center>
       </div>
       <% end %>   
     </div>
     <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' 
        });
      });
    </script>
  </div>

</body>
</html> 


