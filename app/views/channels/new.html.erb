
    <!DOCTYPE html>
    <html>
    <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
    body {
      font-family: "Lato", sans-serif;
    }

    .sidenav {
      height: 100%;
      width: 250px;
      position: fixed;
      z-index: 1;
      top: 58px;
      left: 3px;
      background-color: Lavender;
      overflow-x: hidden;
    }





    @media screen and (max-height: 450px) {
      .sidenav {padding-top: 15px;}
      .sidenav a {font-size: 18px;}
    }
    </style>
    </head>
    <body>
    <%= render 'layouts/navbar' %>
    <div class="sidenav">
    <%= render 'layouts/sidebar' %>

    </div>
    <div class="container" style="margin-top: 80px;">
      <div class="row">
      <div class="col-sm-6 offset-3">
     <div class="card">

      <h5 class="card-header info-color white-text text-center ">
        <strong><%= t('channels.new.Add New Channel') %></strong>
      </h5>
      <div class="card-body">
        <%= form_for(@channel) do |f| %> 
            <div class="form-group has-feedback">
            <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' ,name:"name",placeholder: t('channels.new.Enter Channel Name') %>
          </div>
          <div>

       
             <%= f.hidden_field :workspace_id, value: @workspace.id ,name:"workspace_id" %>
          </div>
          <div class="form-group">
            <%= f.check_box :privacy, name:'privacy' %>
            <%= f.label :Public %>
                 
      </div>
      <div class="col-xs-3">
        <div class="form-group">
               <%= f.submit t('channels.new.Save'), class: "btn btn-primary btn-block btn-flat" %>
                <%= link_to 'Cancel', workspace_path(@workspace), class: "btn btn-flat btn-block btn-primary" %>
      
            </div>

          </div>
          
          
          
        <% end %>   
      </div>


    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' 
        });
      });
    </script>
    </div>
      
    </body>
    </html> 


     