  <body class="hold-transition register-page">

  <div class="register-box-body col-sm-6 col-sm-offset-3" style="margin-top: 100px">
    <p class="login-box-msg">Register New User</p>
    <%= form_for(@user,url:signup_path) do |f| %>
      <div class="form-group has-feedback">
          <%= f.label :name %>
       <%= f.text_field :name, class: 'form-control' %>
      </div>
       <div class="form-group has-feedback">
         <%= f.label :email %>
         <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>
      <div class="form-group has-feedback">
           <%= f.label :password %>
         <%= f.password_field :password,   placeholder: 'Password' , class: 'form-control'  %>
      </div>
      <div class="form-group has-feedback">
           <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'form-control' %>
       </div>

       <div class="row">
        <div class="col-xs-3">
           <%= f.submit "Save", class: "btn btn-primary btn-block btn-flat" %>
        </div>
        <div class="col-xs-3">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Cancel</button>
        </div>
    <% end %>
   
  </div>


<script>
